<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Darkblack"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/languagearea"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="80dp"
        android:layout_weight="1"

        android:orientation="horizontal"
        android:paddingEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:clickable="false"
            android:visibility="gone" />

        <com.view.MTextView
            android:id="@+id/languageText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:layout_weight="1"
            android:clickable="false"
            android:gravity="center|start"
            android:paddingStart="14dp"
            android:singleLine="true"
            android:text="ENG"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textColor="@color/app_login_txt_color"
            android:textSize="17sp"
            app:customTypeFace="@string/systemSemiBold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:clickable="false"
            android:tint="@color/app_login_txt_color"
            app:srcCompat="@mipmap/ic_down_arrow" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/languageCurrancyArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="23dp">


        <LinearLayout
            android:id="@+id/currencyarea"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/language_border"
            android:orientation="horizontal"
            android:paddingEnd="10dp"

            >

            <com.view.MTextView
                android:id="@+id/currancyText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="center|start"
                android:paddingStart="14dp"
                android:singleLine="true"
                android:text="USD"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="@color/app_login_txt_color"
                android:textSize="17sp"
                app:customTypeFace="systemSemiBold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:clickable="false"
                android:tint="@color/app_login_txt_color"
                app:srcCompat="@mipmap/ic_down_arrow" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="14dp"
        android:orientation="horizontal">


    </LinearLayout>

    <com.view.MTextView
        android:id="@+id/introductondetailstext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="@dimen/txt_size_14"
        android:visibility="gone"
        app:customTypeFace="@string/systemLightFont"
        tools:layout_editor_absoluteX="23dp" />

    <com.view.anim.loader.AVLoadingIndicatorView
        android:id="@+id/loaderView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_30sdp"
        android:background="@android:color/transparent"
        android:visibility="gone"
        app:indicator="BallPulse"
        app:indicator_color="#ffffff" />

    <com.view.MTextView
        android:id="@+id/loginbtn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="24dp"
        android:layout_weight="1"
        android:background="@drawable/selected_border"
        android:gravity="center"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:singleLine="true"
        android:text="Login"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="17sp"
        app:customTypeFace="@string/systemLightFont"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10" />

    <com.view.MTextView
        android:id="@+id/registerbtn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_weight="1"
        android:gravity="center"
        android:singleLine="true"
        android:text="Register"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:customTypeFace="@string/systemLightFont"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginbtn" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/languagearea"
        app:srcCompat="@drawable/loop" />

</androidx.constraintlayout.widget.ConstraintLayout>

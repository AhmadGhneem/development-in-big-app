                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/reBookingarea"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:background="@drawable/history_border"
                            android:visibility="gone">


                            <com.view.MTextView
                                android:id="@+id/btn_type_rebooking"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:ellipsize="marquee"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:singleLine="true"
                                android:text="Rebooking"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textColor="@color/appThemeColor_1"
                                android:textStyle="normal"
                                app:autoSizeMaxTextSize="@dimen/_12ssp"
                                app:autoSizeMinTextSize="@dimen/_6ssp"
                                app:autoSizeStepGranularity="2sp"
                                app:autoSizeTextType="uniform"
                                app:customTypeFace="@string/systemMediumFont" />


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/reScheduleArea"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:background="@drawable/history_border"
                            android:visibility="gone">


                            <com.view.MTextView
                                android:id="@+id/btn_type_reschedule"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:ellipsize="marquee"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:singleLine="true"
                                android:text="ReSchedule"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textColor="@color/appThemeColor_1"
                                android:textStyle="normal"
                                app:autoSizeMaxTextSize="@dimen/_12ssp"
                                app:autoSizeMinTextSize="@dimen/_6ssp"
                                app:autoSizeStepGranularity="2sp"
                                app:autoSizeTextType="uniform"
                                app:customTypeFace="@string/systemMediumFont" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cancelArea"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:background="@drawable/history_border"
                            android:visibility="gone">


                            <com.view.MTextView
                                android:id="@+id/btn_type_cancel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:ellipsize="marquee"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:singleLine="true"
                                android:text="Cancel"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textColor="@color/appThemeColor_1"
                                android:textStyle="normal"
                                app:autoSizeMaxTextSize="@dimen/_12ssp"
                                app:autoSizeMinTextSize="@dimen/_6ssp"
                                app:autoSizeStepGranularity="2sp"
                                app:autoSizeTextType="uniform"
                                app:customTypeFace="@string/systemMediumFont" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/viewCancelReasonArea"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:background="@drawable/history_border"
                            android:visibility="gone">


                            <com.view.MTextView
                                android:id="@+id/btn_type_view_cancel_reason"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:ellipsize="marquee"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:singleLine="true"
                                android:text="View reason"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textColor="@color/appThemeColor_1"
                                android:textStyle="normal"
                                app:autoSizeMaxTextSize="@dimen/_12ssp"
                                app:autoSizeMinTextSize="@dimen/_6ssp"
                                app:autoSizeStepGranularity="2sp"
                                app:autoSizeTextType="uniform"
                                app:customTypeFace="@string/systemMediumFont" />


                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ufxMultiArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start|center"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:gravity="top|start|center"
                            android:orientation="vertical">

                            <com.view.SelectableRoundedImageView
                                android:id="@+id/providerImgView"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="start|center"
                                android:gravity="start|center"
                                android:scaleType="centerCrop"
                                app:sriv_left_bottom_corner_radius="20dip"
                                app:sriv_left_top_corner_radius="20dip"
                                app:sriv_oval="true"
                                app:sriv_right_bottom_corner_radius="20dip"
                                app:sriv_right_top_corner_radius="20dip" />

                            <com.view.simpleratingbar.SimpleRatingBar
                                android:id="@+id/ratingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_gravity="start|center"
                                android:gravity="start|center"
                                android:padding="2dp"
                                app:SRB_fillColor="@color/ratingfill"
                                app:SRB_starBackgroundColor="@color/gray_holo_light"
                                app:SRB_starSize="@dimen/_8sdp"
                                app:SRB_stepSize="0.5" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.view.MTextView
                                android:id="@+id/providerNameTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:ellipsize="end"
                                android:gravity="start|center_vertical"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:text="Dany Jose"
                                android:textAlignment="viewStart"
                                android:textColor="#141414"
                                android:textSize="@dimen/_14ssp"
                                app:customTypeFace="@string/systemSemiBold" />

                            <com.view.MTextView
                                android:id="@+id/sAddressTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:clickable="false"
                                android:ellipsize="end"
                                android:gravity="start|center_vertical"
                                android:includeFontPadding="false"
                                android:text="B-510, Mondeal Square, PrahladNagar,"
                                android:textAlignment="viewStart"
                                android:textColor="#141414"
                                android:textSize="@dimen/_11ssp"
                                app:customTypeFace="@string/systemRegular" />

                            <LinearLayout
                                android:id="@+id/ufxMultiBtnArea"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:id="@+id/cancelBookingBtnArea"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:layout_weight="1"
                                        android:background="@drawable/history_border"
                                        android:gravity="center"
                                        android:visibility="gone">

                                        <com.view.MTextView
                                            android:id="@+id/cancelBookingBtn"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="@dimen/_2sdp"
                                            android:layout_marginEnd="@dimen/_2sdp"
                                            android:gravity="center"
                                            android:includeFontPadding="false"
                                            android:text="Cancel Booking"
                                            android:textAlignment="center"
                                            android:textAllCaps="true"
                                            android:textColor="@color/appThemeColor_1"
                                            android:textStyle="normal"
                                            app:autoSizeMaxTextSize="@dimen/_12ssp"
                                            app:autoSizeMinTextSize="@dimen/_6ssp"
                                            app:autoSizeStepGranularity="2sp"
                                            app:autoSizeTextType="uniform"
                                            app:customTypeFace="@string/systemMediumFont" />

                                    </LinearLayout>


                                    <LinearLayout
                                        android:id="@+id/reBookingBtnArea"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:layout_weight="1"
                                        android:background="@drawable/history_border"
                                        android:visibility="gone">


                                        <!--
                                                                    <include

                                                                        android:id="@+id/btn_type_booking"
                                                                        layout="@layout/btn_type_2"
                                                                        android:layout_width="match_parent"
                                                                        android:layout_height="@dimen/all_btn_height"
                                                                        android:layout_alignParentBottom="true"
                                                                        android:layout_gravity="bottom"
                                                                        android:layout_marginStart="5dp"

                                                                        />-->


                                        <com.view.MTextView
                                            android:id="@+id/reBookingBtn"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="start|center"
                                            android:layout_marginStart="@dimen/_2sdp"
                                            android:layout_marginEnd="@dimen/_2sdp"
                                            android:ellipsize="marquee"
                                            android:gravity="center"
                                            android:includeFontPadding="false"
                                            android:marqueeRepeatLimit="marquee_forever"
                                            android:singleLine="true"
                                            android:text="Rebooking"
                                            android:textAlignment="center"
                                            android:textAllCaps="true"
                                            android:textColor="@color/appThemeColor_1"
                                            android:textStyle="normal"
                                            app:autoSizeMaxTextSize="@dimen/_12ssp"
                                            app:autoSizeMinTextSize="@dimen/_6ssp"
                                            app:autoSizeStepGranularity="2sp"
                                            app:autoSizeTextType="uniform"
                                            app:customTypeFace="@string/systemMediumFont" />


                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/viewCancelReasonBtnArea"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:layout_weight="1"
                                        android:background="@drawable/history_border"
                                        android:visibility="gone">


                                        <!--
                                                                    <include

                                                                        android:id="@+id/btn_type_booking"
                                                                        layout="@layout/btn_type_2"
                                                                        android:layout_width="match_parent"
                                                                        android:layout_height="@dimen/all_btn_height"
                                                                        android:layout_alignParentBottom="true"
                                                                        android:layout_gravity="bottom"
                                                                        android:layout_marginStart="5dp"

                                                                        />-->


                                        <com.view.MTextView

                                            android:id="@+id/viewCancelReasonBtn"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="start|center"
                                            android:layout_marginStart="@dimen/_2sdp"
                                            android:layout_marginEnd="@dimen/_2sdp"
                                            android:ellipsize="marquee"

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_15sdp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:elevation="0dp"
        app:cardBackgroundColor="@color/view_gray_back"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="0dp">

        <LinearLayout
            android:id="@+id/bookingArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/headerArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.view.MTextView
                        android:id="@+id/historyNoHTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:text="Booking#"
                        android:textColor="#141414"
                        android:textSize="@dimen/_13ssp"
                        app:customTypeFace="@string/systemSemiBold" />

                    <com.view.MTextView
                        android:id="@+id/historyNoVTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:text="4545454"
                        android:textColor="#141414"
                        android:textSize="@dimen/_13ssp"
                        app:customTypeFace="@string/systemSemiBold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/statusArea"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="end|center"
                    android:background="@drawable/login_border"
                    android:gravity="center|end"
                    android:orientation="horizontal">

                    <com.view.MTextView
                        android:id="@+id/statusVTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textColor="@color/appThemeColor_TXT_1"
                        android:textSize="@dimen/_8ssp"
                        app:customTypeFace="@string/systemMediumFont"
                        app:textAllCaps="true" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/contentArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/typeArea"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:elevation="0dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="#ffae00"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="0dp">

                        <!--
                                                android:id="@+id/etypeTxt"
                        -->

                        <com.view.MTextView
                            android:id="@+id/SelectedTypeNameTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"
                            android:ellipsize="marquee"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/_8ssp" />


                    </androidx.cardview.widget.CardView>

                    <com.view.MTextView
                        android:id="@+id/packageTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text=""
                        android:textColor="#272727"
                        android:textSize="@dimen/txt_size_14"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/noneUfxMultiArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">



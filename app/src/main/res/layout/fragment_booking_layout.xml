                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/srcimage"
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_10sdp"
                                    android:layout_gravity="center_vertical"
                                    android:clickable="false"
                                    android:src="@drawable/hcircle"
                                    android:tint="@color/primary_color_blue" />

                                <com.view.DividerView
                                    android:id="@+id/aboveLine"
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:layout_above="@+id/imagedest"
                                    android:layout_below="@+id/srcimage"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:layerType="software"
                                    android:visibility="visible"
                                    app:dividerColor="#FFFFFF"
                                    app:dividerDashGap="3dp"
                                    app:dividerDashLength="10dp"
                                    app:dividerOrientation="vertical"

                                    />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/pickupLocArea"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">


                                    <!-- <View
                                         android:id="@+id/imgsourcearea1"
                                         android:layout_width="@dimen/_10sdp"
                                         android:layout_height="@dimen/_10sdp"
                                         android:layout_gravity="center_vertical"
                                         android:layout_weight="0"
                                         android:background="@color/pickup_req_now_btn"
                                         android:clickable="false" />
         -->
                                    <com.view.MTextView
                                        android:id="@+id/sourceAddressHTxt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:clickable="false"
                                        android:ellipsize="end"
                                        android:gravity="start|center_vertical"
                                        android:includeFontPadding="false"
                                        android:maxLines="1"
                                        android:text="Pickup From"
                                        android:textAlignment="viewStart"
                                        android:textAllCaps="true"
                                        android:textColor="#929292"
                                        android:textSize="@dimen/_9ssp"
                                        app:customTypeFace="@string/systemRegular" />
                                </LinearLayout>

                                <com.view.MTextView
                                    android:id="@+id/sourceAddressTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:clickable="false"
                                    android:ellipsize="end"
                                    android:gravity="start|center_vertical"
                                    android:includeFontPadding="false"
                                    android:text="PrahladNagar Cross Road,Iscon Char Rasta"
                                    android:textAlignment="viewStart"
                                    android:textColor="#141414"
                                    android:textSize="@dimen/_11ssp"
                                    app:customTypeFace="@string/systemRegular" />

                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/destarea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/imagedest"
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_10sdp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@null"
                                    android:clickable="false"
                                    android:src="@drawable/hcircle"
                                    android:tint="@color/pickup_req_later_btn" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">


                                    <com.view.MTextView
                                        android:id="@+id/destAddressHTxt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:clickable="false"
                                        android:ellipsize="end"
                                        android:gravity="start|center_vertical"
                                        android:includeFontPadding="false"
                                        android:maxLines="1"
                                        android:text="Drop To"
